// -- CLASSES

.date-picker
{
    display: flex;
    gap: 0.5rem;
    user-select: none;
}

.date-picker .calendar
{
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    border: 1px solid inputBorderColor;
    padding: 0.5rem;
    border-radius: inputBorderRadius;
    background-color: white;
}

.date-picker .month-grid
{
    display: grid;
    grid-template-rows: 1.5rem;
    grid-template-columns: auto 1fr auto;
    justify-content: center;
    align-items: center;
    gap: 0.5rem;
    text-align: center;
    font-weight: datePickerMonthFontWeight;
}

.date-picker .month-button
{
    background-color: transparent;
    border: none;
    cursor: pointer;
    font-size: 1rem;
}

.date-picker .month-button:hover
{
    color: #007bff;
}

.date-picker .day-grid
{
    display: grid;
    grid-template-rows: 1.5rem;
    grid-template-columns: repeat( 7, 1fr );
    justify-content: center;
    align-items: center;
    gap: 0.5rem;
    text-align: center;
}

.date-picker .weekday
{
    font-weight: datePickerWeekdayFontWeight;
}

.date-picker .day
{
    cursor: pointer;
    text-align: center;
    border: 2px solid transparent;
    border-radius: 50%;
    color: datePickerDayColor;
    font-weight: datePickerDayFontWeight;
}

.date-picker .day.in-range
{
    font-weight: datePickerInRangeDayFontWeight;
    color: datePickerInRangeDayColor;
}

.date-picker .day.selected
{
    border: 2px solid datePickerSelectedDayBorderColor;
    border-radius: 50%;
    font-weight: datePickerSelectedDayFontWeight;
    color: datePickerSelectedDayColor;
}

.date-picker .day.is-grayed
{
    font-weight: datePickerGrayedDayFontWeight;
    color: datePickerGrayedDayColor;
}
