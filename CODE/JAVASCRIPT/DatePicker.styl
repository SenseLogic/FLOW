// -- CLASSES

.date-picker
{
    display: flex;
    container-type: inline-size;
}

.date-picker .calendar-grid
{
    display: flex;
    gap: 0.5rem;
    border: 1px solid inputBorderColor;
    padding: 0.5rem;
    border-radius: inputBorderRadius;
    gap: 2rem;
    user-select: none;

    +media( smaller-32em )
    {
        flex-direction: column;
        gap: 1rem;
    }
}

.date-picker .calendar
{
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}

.date-picker .month-grid
{
    display: grid;
    grid-template-rows: 1.5rem;
    grid-template-columns: auto 1fr auto;
    justify-content: center;
    align-items: center;
    gap: 0.5rem;
    text-align: center;
    font-weight: datePickerMonthFontWeight;
    color: datePickerMonthColor;
}

.date-picker .month-button
{
    background-color: transparent;
    border: none;
    cursor: pointer;
    font-size: 1rem;
}

.date-picker .month-button:hover
{
    color: datePickerMonthHoverColor;
}

.date-picker .day-grid
{
    display: grid;
    grid-template-rows: 1.5rem;
    grid-template-columns: repeat( 7, 1fr );
    justify-content: center;
    align-items: center;
    gap: 0.5rem;
    text-align: center;
}

.date-picker .weekday
{
    font-weight: datePickerWeekdayFontWeight;
    color: datePickerWeekdayColor;
}

.date-picker .day
{
    cursor: pointer;
    text-align: center;
    border: 2px solid transparent;
    border-radius: 50%;
    color: datePickerDayColor;
    font-weight: datePickerDayFontWeight;
}

.date-picker .day.is-grayed
{
    font-weight: datePickerGrayedDayFontWeight;
    color: datePickerGrayedDayColor;
    cursor: auto;
}

.date-picker .day.is-inside:not(.is-grayed)
{
    font-weight: datePickerInsideDayFontWeight;
    color: datePickerInsideDayColor;
}

.date-picker .day.is-selected:not(.is-grayed)
{
    border: 2px solid datePickerSelectedDayBorderColor;
    border-radius: 50%;
    font-weight: datePickerSelectedDayFontWeight;
    color: datePickerSelectedDayColor;
}

