// -- CLASSES

.value-picker
{
    position: relative;
    user-select: none;
}

.value-picker .track
{
    position: absolute;
    top: 0.5rem;
    transform: translateY( -50% );
    width: 100%;
    height: 0.5rem;
    background: valuePickerTrackBackgroundColor;
    border-radius: 0.25rem;
}

.value-picker .frame
{
    position: relative;
    margin-right: 1rem;
    height: 1rem;
}

.value-picker .range
{
    position: absolute;
    top: 0.5rem;
    transform: translate( 0.5rem, -50% );
    height: 0.5rem;
    background: valuePickerRangeBackgroundColor;
    border-radius: 0.25rem;
}

.value-picker .slider
{
    position: absolute;
    top: 0.5rem;
    transform: translateY( -50% );
    width: 1rem;
    height: 1rem;
    border-radius: 50%;
    background: valuePickerSliderBackgroundColor;
    border: 2px solid valuePickerSliderBorderColor;
    cursor: pointer;
}

.value-picker .legend
{
    width: 100%;
    display: flex;
    justify-content: space-between;
    color: valuePickerLegendColor;
}

